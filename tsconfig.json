{
    "compilerOptions": {
        "allowUnusedLabels": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
	    "resolveJsonModule": true,
        "target": "es2020",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./lib",
        "declaration": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "./src.ts/**/*.ts",
        "./src.ts/**/*.js"         ]
}
